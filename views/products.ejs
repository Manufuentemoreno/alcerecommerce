<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <%- include("partials/head")  %> 
    <title>Alcer</title>
</head>
<body>
    <header>
        <%- include("partials/topBar")  %> 
    </header>
    <main class="main-page">
        <section class="section-products"> 
            <h2 class="title-all-products"><%= locals.title %>:</h2>
            <div class="products">
            
            <% products.forEach(producto => { %>

                
                <a href="/products/<%= producto.id %> " style=text-decoration:none>
                    <form class="add-cart-form" action="/products" method="post">
                        <button class="button-add-cart" type="submit"><i class="fa-sharp fa-solid fa-cart-plus icon-add-cart"></i></button>
                    </form>
                    <article class="product-card">
                        <img src="/images/productDetail/<%= producto.product_photo  %>" alt="Producto 1">
                        <div class="product-text">
                            <h3 class="product-name"><%= producto.name %></h3>
                            <p class="product-description"><%= producto.description  %> </p>
                            <p class="product-price">$<%= producto.price  %> </p>
                        </div>
                    </article>
                </a>
                

            <% }) %>

            </div>
        </section>
        <section class="cart-box cart-box-products">
            <h2 class="cart-title">Mi Carrito</h2>
            <div class="carrito-productos">
                <% let total = 0; %> 
                <% for (let i = 0; i < detalles.length; i++) {%> 
                    <% subtotal = (parseFloat(detalles[i].amount) * parseFloat(detalles[i].product.price)) %> 
                    <% total = total + parseFloat(subtotal) %> 
                    <div class="card-cart">
                        <figure>
                            <img src="/images/productDetail/<%= detalles[i].product.product_photo %>" alt="Foto">
                        </figure>
                        <div class="cart-detail">
                            <p class="cart-product-name"> <%= detalles[i].product.name %> </p>
                            <div class="addRemove-group">
                                <form action="/cart/<%= detalles[i].id %>/removeOne?_method=PUT" method="POST">
                                    <button class="addRemove-btn" type="submit">-</button>
                                </form>
                                <form action="">
                                    <input type="text" class="cart-amount" name="amount" id="amount" value="<%= detalles[i].amount %>">
                                </form>
                                <form action="/cart/<%= detalles[i].id %>/addOne?_method=PUT" method="POST">
                                    <button class="addRemove-btn" type="submit">+</button>
                                </form>
                            </div>
                            <p class="cart-price">$<%= subtotal.toFixed(2) %></p>
                            <div class="cart-buttons-group">
                                <form action="/cart/<%= detalles[i].id %>/delete?_method=DELETE" method="POST">
                                    <button type="submit" class="cart-delete-btn">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %> 
            </div>
            <div class="continue-group">
                <div class="cart-total-group">
                    <h3>Total:</h3>
                    <h3>$<%= parseFloat(total, 10).toFixed(2) %></h3>
                </div>
                <form class="cart-submit-form" action="/cart/confirm">
                    <button class="cart-submit-btn" type="submit">Continuar</button>
                </form>
            </div>
        </section>   
    </main>
    <%- include("partials/footer")  %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>